pipeline {

	  agent any
	  environment {
	  	NEW_VERSION = '1.3.0'
		SERVER_CREDENTILS = credentials('servercredentils')
	  
	  }
	  
	  stages {
  
			stage("build"){
	
				steps {
					echo 'building the applictaion..'
					echo "building version ${NEW_VERSION}"
			}
		}
		
			stage("Test"){
	
				steps {
					echo 'testing the application..'
	}
}	


			stage("Deploy"){
	
				steps {
					echo 'deploying the application...'
					echo "deploying with server credentild $(servercredentils)"
					sh "$(servercredentils)"
			}
		}
	
	}
}	
				
